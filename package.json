{
  "name": "sales-blanch-desktop",
  "version": "1.0.0",
  "description": "Sales Management Desktop App",
  "productName": "SalesBlanch",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "deploy": "electron-packager . SalesBlanch --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds && rm -rf /Applications/SalesBlanch.app && cp -R release-builds/SalesBlanch-darwin-x64/SalesBlanch.app /Applications/"
  },
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.sales-blanch.desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.2.0"
  }
}
